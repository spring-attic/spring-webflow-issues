<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
		http://www.springframework.org/schema/webflow 
		https://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<view-state id="view">
		<transition on="continue" to="doSomething" />
		<transition on="finish" to="done" />
	</view-state>

	<action-state id="doSomething">
		<evaluate expression="'someone'" result="flowScope.name" />
		<evaluate expression="'somewhere'" result="flowScope.address" />
		<transition on="#{flowScope.address}" to="view" />
	</action-state>
	
	<end-state id="done" view="externalRedirect:contextRelative:/" />

</flow>